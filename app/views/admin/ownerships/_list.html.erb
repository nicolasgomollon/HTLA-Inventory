<table class="table table-striped table-bordered table-condensed">
<thead>
	<tr>
		<th>Computer</th>
		<th>Student</th>
		<th>Start/End</th>
		<th></th>
	</tr>
</thead>
<tbody>
<% ownerships.each do |ownership| %>
	<tr>
		<td><%= link_to ownership.computer.idtag, [:admin, ownership.computer] %></td>
		<td><%= link_to ownership.student.nicename, [:admin, ownership.student] %></td>
		<td><%= ownership.startdate %> <% if ownership.enddate %> / <%= ownership.enddate %> <% end %> </td>
		<td>
			<% if ownership.current? %>
				<%= form_for [:admin, ownership], :method => :delete, :html => {:class => "form-inline"} do |f| %>
					<button class="btn btn-danger <%= "disabled" unless ownership.current? %>">End</button>
				<% end %>
			<% else %>
				<button class="btn btn-danger <%= "disabled" unless ownership.current? %>">End</button>
			<% end %>
		</td>
	</tr>
<% end %>
</tbody>
<caption>Ownerships</caption>
</table>