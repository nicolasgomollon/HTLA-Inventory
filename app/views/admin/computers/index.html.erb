<div class="row">
	<div class="span6">
		<%= render "search" %>
	</div>
	<div class="span3">
		<%= link_to new_admin_computer_path do %>
			<button class="btn">New Computer</button>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="span6">
		<% if !@computers.nil? then %>
		<table class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<th>Tag</th>
					<th>Serial</th>
				</tr>
			</thead>
			<tbody>
		<% @computers.each do |computer| %>
			<tr>
				<td><%= link_to computer.idtag, [:admin, computer] %></td>
				<td><%= link_to computer.serial, [:admin, computer] %></td>
			</tr>
		<% end %>
			</tbody>
		</table>
		<% else %>
			No Computers to Display!
		<% end%>
	</div>
</div>