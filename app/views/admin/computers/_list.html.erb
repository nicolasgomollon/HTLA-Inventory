<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th>#</th>
			<th>Tag</th>
			<th>Serial</th>
		</tr>
	</thead>
	<tbody>
<% count = 0 %>
<% computers.each do |computer| %>
	<tr>
		<% count += 1 %>
		<td><%= count %>
		<td><%= link_to computer.idtag, [:admin, computer] %></td>
		<td><%= link_to computer.serial, [:admin, computer] %></td>
	</tr>
<% end %>
	</tbody>
</table>