<div class="row">
<div class="span6 offset3">
<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
		</tr>
	</thead>
	<tbody>
<% @locations.each do |location| %>
	<tr>
		<td><%= location.computers.size %></td>
		<td><%= link_to location.name, [:admin, location] %></td>
	</tr>
<% end %>
	</tbody>
</table>
<%= link_to new_admin_location_path do %>
	<button class="btn btn-primary">New Location</button>
<% end %>
</div>
</div>