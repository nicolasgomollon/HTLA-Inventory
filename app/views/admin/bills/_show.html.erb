<table class="table table-striped table-bordered table-condensed">
<thead>
	<tr>
		<th>Description</th>
		<th>Repair</th>
		<th>Student</th>
		<th>Amount</th>
	</tr>
</thead>
<% bills.each do |bill| %>
	<% unless bill.new_record? %>
	<tbody>
		<tr>
			<td><%=link_to bill.desc, [:admin, bill] %></td>
			<td><%=link_to bill.repair_order.activities.first.desc, [:admin, bill.repair_order] %></td>
			<td><%=link_to bill.student.nicename, [:admin, bill.student] %></td>
			<td><span class="label label-<%= bill.paid ? "success" : "warning" %>"><%= bill.amount %></span></td>
		</tr>
	</tbody>
	<% end %>
<% end %>
<caption>Bills</caption>
</table>