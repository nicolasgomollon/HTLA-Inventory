<%= @student.nicename %> <%= @student.studentid %> <br/>

<div class="row">
	<div class="span6">
		<table class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<th>Tag</th>
					<th>Start</th>
					<th>End</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
			<% @student.computer_ownerships.each do |ownership| %>
				<tr>
					<td><%= link_to ownership.computer.idtag, [:admin, ownership.computer] %></td>
					<td><%= ownership.startdate %></td>
					<td><%= ownership.enddate %></td>
					<td><%= link_to "Show", [:admin, ownership] %>
				</tr>
			<% end %>
			</tbody>
			<caption>Ownerships</caption>
		</table>
		<%= link_to "Add Computer to Account", new_admin_computer_ownership_path() + "/?student_id=#{@student.id}"%>
	</div>

	<div class="span6">
		<%= render "admin/bills/show", :bills => @student.bills %>
	</div>

</div>