<%= form_tag(admin_students_path, :method=>'get') do %>
	<%= label_tag :firstname, "First"%>
	<%= text_field_tag :firstname, @first %>
	<%= label_tag :lastname, "Last"%>
	<%= text_field_tag :lastname, @last %>
	<%= label_tag :id, "ID#"%>
	<%= text_field_tag :id, @id %>
	<%= submit_tag "Search" %>
<% end %>
<% if !@students.nil? then %>
<% @students.each do |student| %>
	<%= link_to student.firstname + " " + student.lastname, admin_student_path(student) %><br/>
<% end %>
<% else %>
	No Students to Display!
<% end%>