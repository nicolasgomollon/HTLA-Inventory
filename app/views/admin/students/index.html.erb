<%= render "search" %>
<div class="row">
	<div class="span6">
		<% if !@students.nil? then %>
			<table class="table table-striped table-bordered table-condensed">
				<thead>
					<tr>
						<th>Name</th>
						<th>ID</th>
					</tr>
				</thead>
				<tbody>
					<% @students.each do |student| %>
					<tr>
						<td><%= link_to student.nicename, [:admin, student] %></td>
						<td><%= link_to student.studentid, [:admin, student] %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		<% else %>
			No Students to Display!
		<% end%>
	</div>
</div>