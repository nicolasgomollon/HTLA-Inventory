<%= form_tag admin_students_path, :method=>'get', :html => {:class=>"form-inline"} do %>
	<%= text_field_tag :firstname, @first, {:class => "input-small", :placeholder => "First"} %>
	<%= text_field_tag :lastname, @last, {:class => "input-small", :placeholder => "Last"} %>
	<%= text_field_tag :id, @id, {:class => "span1", :placeholder => "ID"} %>
	<%= submit_tag "Search", {:class => "btn"} %>
<% end %>
<div class="row">
	<div class="span6">
		<% if !@students.nil? then %>
			<table class="table table-striped table-bordered table-condensed">
				<thead>
					<tr>
						<th>Name</th>
						<th>ID</th>
					</tr>
				</thead>
				<tbody>
					<% @students.each do |student| %>
					<tr>
						<td><%= link_to student.nicename, [:admin, student] %></td>
						<td><%= link_to student.studentid, [:admin, student] %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		<% else %>
			No Students to Display!
		<% end%>
	</div>
</div>