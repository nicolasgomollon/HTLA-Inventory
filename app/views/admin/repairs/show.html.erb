<div class="row">
	<div class="span3">
		<h3>Repair for: <%= link_to @repair.computer.idtag, admin_computer_path(@repair.computer) %><br/></h3>
	</div>
</div>

<div class="row">
	<div class="span6">
		<table class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<th>Date</th>
					<th>Message</th>
					<th>Description</th>
				</tr>
			</thead>
			<% @repair.activities.each do |activity| %>
			<tbody>
				<tr>
					<td><%= activity.date %></td>
					<td><%= activity.message %></td>
					<td><%= activity.desc %></td>
				</tr>
			</tbody>
			<% end %>
			<caption>Activity</caption>
		</table>
		<% if @repair.open? %>
			<%= render 'admin/repairs/form', :repair => @repair %>
		<% end %>
	</div>

	<div class="span6">
		<%= render "admin/bills/show", :bills => @repair.bills %>
		<% if @repair.open? %>
			<%= render 'admin/bills/form', :bill => @bill %>
		<% end %>
	</div>
</div>